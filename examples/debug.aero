person = {
  name = ""
  age  = 0

  init := (name, age) {
    $age  = age
    $name = name
  }

  pp = () {
    print("My name is ", $name, " and I'm ", $age, " years old.\n")
  }
}

me          = person()
me.name     = "Alice"
me.age      = 999
me.fav_food := "pizza"
me.pp       = () {
  print("My name is ", $name, ", I'm ", $age, " years old, and my favorite food is ", $fav_food, ".\n")
}

me.pp()